    <!-- card -->
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-3">
        <% for(let it of allListings) { %>
            <a href="/listings/<%= it._id %>" class="listing-link">
                <div class="card col listing-card">
                    <img src="<%= it.image %>" class="card-img-top" alt="listing image" style="height:20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                    <p class="card-text">
                        <b> <%= it.title %> </b> <br />
                        &#8377; <%= it.price.toLocaleString("en-IN") %>
                    </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    

</body>

